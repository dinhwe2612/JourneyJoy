<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/element_toolbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome back!"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Sign in and let's get doing"
        android:textStyle="bold"
        android:textSize="22dp"/>
    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/EmailEditText"
        android:background="@drawable/round_endsession"
        android:layout_width="359dp"
        android:layout_height="74dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Email"
        android:textSize="20dp"
        android:paddingStart="15dp"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/passEditText"
        android:layout_width="359dp"
        android:layout_height="74dp"
        android:background="@drawable/round_endsession"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Password"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/SignInBtn2"
        android:layout_width="359dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FEA36B"
        android:src="@drawable/round_savechanges"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New?"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/signUpSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#01635D"/>
        </LinearLayout>
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="Forgot Password?"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center">
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#727272"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#727272"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"/>
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#727272"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="14dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/googleSignInBtn"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_google"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_apple"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>