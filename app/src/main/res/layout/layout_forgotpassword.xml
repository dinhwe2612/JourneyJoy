<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <include layout="@layout/element_toolbar"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Provide an Email to reset your password"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="160dp"/>
    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/emailForgot"
        android:background="@drawable/round_endsession"
        android:layout_width="359dp"
        android:layout_height="74dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Email"
        android:textSize="20dp"
        android:paddingStart="15dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/confirmForgot"
        android:layout_width="359dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FEA36B"
        android:src="@drawable/round_savechanges"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"/>
</LinearLayout>