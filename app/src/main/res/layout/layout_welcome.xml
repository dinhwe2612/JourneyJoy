<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameSignin">

    <include layout="@layout/element_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".screen.common.WelcomeActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To"
            android:textSize="20dp"
            android:textColor="#01635D"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="J"
                android:textSize="100dp"
                android:textColor="#01635D"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                android:text="J"
                android:textSize="100dp"
                android:textColor="#01635D"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="JoyJourney"
            android:textColor="#01635D"
            android:layout_marginTop="-20dp"
            android:textSize="40dp"/>
        <Button
            android:id="@+id/SignUpBtn"
            android:layout_width="359dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:backgroundTint="#FEA36B"
            android:src="@drawable/round_savechanges"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="359dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/round_endsession"
            android:backgroundTint="#FFFFFF"
            android:text="Login"
            android:textSize="20dp"
            android:textColor="#FEA36B"
            android:textStyle="bold"/>

    </LinearLayout>
</FrameLayout>